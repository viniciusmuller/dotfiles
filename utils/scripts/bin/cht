#!/usr/bin/env bash

TMP_FILE=/tmp/cht_sh_options

if [ -f "$TMP_FILE" ]; then
  options=`<"$TMP_FILE"`
else
  options=`curl -s https://cheat.sh/:list`
  echo "$options" > "$TMP_FILE"
fi

selected=`echo "$options" | fzf`

# Exit if selected is empty
[ -z "$selected" ] && exit

curl -s cht.sh/"$selected" | less

